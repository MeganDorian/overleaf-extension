{
  "name": "Overleaf extension",
  "version": "1.0.0",
  "description": "Extension for overleaf.com for quick home-tasks sending",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "32": "icons/overleaf-ext-logo.png"
    },
    "default_popup": "ui/dist/popup.html",
    "default_title": "Overleaf"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.overleaf.com/*"
      ],
      "js": [
        "inject-get-link.js"
      ]
    }
  ],
  "web_accessible_resources": [ "get-link.js" ],
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "*://*.overleaf.com/",
    "*://*.overleaf.com/*"
  ]
}
